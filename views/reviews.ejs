<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <%- include('partials/header.ejs') %>
    <!-- Button trigger modal -->
     <div class="d-flex align-items-center justify-content-around"> 
    <div class="text-center">
      <button
        type="button"
        class="btn btn-primary"
        data-bs-toggle="modal"
        data-bs-target="#exampleModal"
      >
       Add Review
      </button>
    </div>
    <!-- Modal -->
    <div
      class="modal fade"
      id="exampleModal"
      tabindex="-1"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="exampleModalLabel">Share Your Experience</h1>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <form action="/reviews" method="post">
            <div class="mb-3">
                <label for="exampleFormControlInput1" class="form-label">Movie Name</label>
                <input type="text" class="form-control" id="exampleFormControlInput1" name="userMN" placeholder="Ex : Venom">
              </div>
              <div class="mb-3">
                <label for="exampleFormControlTextarea1" class="form-label">Your Review</label>
                <textarea class="form-control" id="exampleFormControlTextarea1" name="userMD" rows="3"></textarea>
              </div>
           
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
              Close
            </button>
            <button type="submit" class="btn btn-primary">Save changes</button>
        </form>
          </div>
        </div>
      </div>
    </div>
    <form class="d-flex" role="search" action="/searchReview" method="post">
      <input
        class="form-control me-2"
        type="search"
        placeholder="Search"
        aria-label="Search"
        name="searchReview"
        style="width: 400px"
      />
      <button class="btn btn-outline-success" type="submit">Search</button>
    </form>
  </div>
    <div class="bg-body-tertiary album py-5">
      <div class="container">
        <div class="g-3 row row-cols-1 row-cols-md-3 row-cols-sm-2">
           <% res.forEach(movieData => { %>
          <div class="col">
            <div class="card shadow-sm">
             <form action="/reviews/<%= movieData.id %>/delete" method="post">
              <div class="card-body">
                <h4 class="card-text"><%- movieData.MovieName %></h4>
                <p class="card-text">
                  <%- movieData.MovieDesc %>
                </p>
                <div class="d-flex align-items-center justify-content-between">
                  <div class="btn-group">
                    <a
                    href="/reviews/<%= movieData.id %>/edit"
                    class="btn btn-sm btn-outline-secondary"
                   
                  >
                    Edit
                  </a>
                  <button
                  type="submit"
                  class="btn btn-sm btn-outline-secondary"
                 
                >
                  Delete
                </button>
                  </div>
                </div>
              </div>
              </form>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </div>

    <%- include('partials/footer.ejs') %>
  </body>
</html>
